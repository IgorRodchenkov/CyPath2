<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<groupId>org.pathwaycommons</groupId>
	<properties>
		<bundle.namespace>org.pathwaycommons.cypath2</bundle.namespace>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<cytoscape.version>[3.0.0, 4)</cytoscape.version>
		<spring.version>3.2.2.RELEASE</spring.version>
		<osgi.api.version>4.2.0</osgi.api.version>
		<paxtools.version>4.2.0-SNAPSHOT</paxtools.version>
		<cpath-client.version>4.0.0-SNAPSHOT</cpath-client.version>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>cypath2-impl</artifactId>
	<version>0.2.0-SNAPSHOT</version>
	<name>CyPath2</name>
	<description>CyPath2 is a Cytoscape 3 GUI client app 
	that connects to a cPath2 (cPathSquared) web service (default URL is http://www.pathwaycommons.org/pc2/,
	a new BioPAX Level3 based server software developed by Pathway Commons team) 
	to find and visualize biological pathway networks.</description>
	
	<organization>
		<name>Pathway Commons: G.Bader Lab, University of Toronto; and CBIO, MSKCC</name>
		<url>http://code.google.com/p/pathway-commons/</url>
	</organization>

	<packaging>bundle</packaging>

	<scm>
		<connection>scm:git:git://github.com/PathwayCommons/cpath2-cytoscape-app.git</connection>
		<developerConnection>scm:git:git@github.com:PathwayCommons/cpath2-cytoscape-app.git</developerConnection>
		<url>https://github.com/PathwayCommons/cpath2-cytoscape-app.git</url>
	</scm>


	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Cytoscape-App-Name>CyPath2</Cytoscape-App-Name>
                            <Cytoscape-App-Version>0.2</Cytoscape-App-Version>
                            <Cytoscape-API-Compatibility>3.0</Cytoscape-API-Compatibility>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.pathwaycommons.cypath2-impl</Bundle-SymbolicName>
						<Bundle-Name>CyPath2</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Activator>${bundle.namespace}.internal.CyActivator</Bundle-Activator>
						<Export-Package>${bundle.namespace}</Export-Package>
						<Private-Package>${bundle.namespace}.internal.*</Private-Package>
						<Embed-Dependency>
							*;groupId=org.biopax.paxtools;type=!pom;inline=true;scope=compile|runtime,
							*;artifactId=cpath-api;type=!pom;inline=true;scope=compile|runtime,
							*;artifactId=cpath-client;type=!pom;inline=true;scope=compile|runtime,
							*;groupId=org.springframework;type=!pom;inline=true;scope=compile|runtime
						</Embed-Dependency>
						<Import-Package>*;resolution:=optional</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<!-- Cytoscape requires Java 1.6 -->		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>default-testCompile</id>
						<phase>test-compile</phase>
						<goals>
							<goal>testCompile</goal>
						</goals>
					</execution>
					<execution>
						<id>default-compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<optimize>true</optimize>
					<showWarnings>true</showWarnings>
					<showDeprecation>true</showDeprecation>
					<compilerArguments>
						<Xmaxwarns>10000</Xmaxwarns>
						<Xmaxerrs>10000</Xmaxerrs>
					</compilerArguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.7.1</version>
				<configuration>
					<redirectTestOutputToFile>true</redirectTestOutputToFile>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Links to the Cytoscape Maven repositories. -->
	<repositories>
		<repository>
			<id>cytoscape_releases</id>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
			<name>Cytoscape Releases</name>
			<url>http://code.cytoscape.org/nexus/content/repositories/releases/</url>
		</repository>
		<repository>
			<id>biopax.releases</id>
			<name>BioPAX Repository</name>
			<url>http://www.biopax.org/m2repo/releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>biopax.snapshots</id>
			<name>BioPAX Snapshots Repository</name>
			<url>http://www.biopax.org/m2repo/snapshots/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>		
		<repository>
			<id>cytoscape_thirdparty</id>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
			<name>Cytoscape Third Party</name>
			<url>http://code.cytoscape.org/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>

